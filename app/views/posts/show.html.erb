<p id="notice"><%= notice %></p>

<%= render @post %>

<%= link_to 'Back', posts_path %>

<ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.body %></li>
  <% end %>
</ul>

<%= form_for [@post, @comment||Comment.new] do |f| %>
  <%= f.label :body, 'Comment' %>
  <%= f.text_area :body %>

  <br/>
  <%= f.submit %>
<% end %>
